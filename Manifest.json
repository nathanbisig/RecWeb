{
	"manifest_version": 2,
	"name": "RecWeb",
	"description": "This extension uses AI to recommend a set of webpages to visit",
	"version": "1.0",
	"icons": {
		"16": "/icons/RecWebLogo_16px.png",
		"48": "/icons/RecWebLogo_48px.png",
		"128": "/icons/RecWebLogo_128px.png"
	},
	"browser_action": {
		"default_icon": {
			"16": "/icons/RecWebLogo_16px.png",
			"48": "/icons/RecWebLogo_48px.png",
			"128": "/icons/RecWebLogo_128px.png"
		},
		"default_popup": "popup.html",
		"default_title": "RecWeb"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"exclude_matches": ["*://www.google.com/*"],
			"js": ["content.js"]
		}
	],
	"permissions": [
		"storage",
		"<all_urls>",
		"tabs",
		"activeTab"
	],
	"background": {
		"scripts": ["background.js"]
	}
}